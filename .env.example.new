# Presidents Mining Monitor Configuration
# Copy this file to .env and update with your values

# ============================================================================
# NETWORK & DISCOVERY
# ============================================================================
# CIDR range for scanning miners (leave blank for auto-detection)
MINER_IP_RANGE=192.168.1.0/24

# Polling interval in seconds
POLL_INTERVAL=30

# ============================================================================
# EMAIL NOTIFICATIONS (for Alerts)
# ============================================================================
# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Email recipient for alerts
ALERT_EMAIL=alerts@yourdomain.com

# ============================================================================
# PROFITABILITY SETTINGS
# ============================================================================
# Default electricity cost in USD per kWh
DEFAULT_POWER_COST=0.10

# ============================================================================
# ALERT THRESHOLDS
# ============================================================================
# Temperature threshold in Celsius
TEMP_THRESHOLD=80

# Hashrate drop threshold (0.9 = alert if drops below 90% of baseline)
HASHRATE_DROP_THRESHOLD=0.9

# Minutes before re-alerting on same condition
ALERT_COOLDOWN_MINUTES=30

# Number of samples for rolling average calculations
ROLLING_WINDOW_SAMPLES=10

# ============================================================================
# MINER EFFICIENCY DEFAULTS (J/TH)
# ============================================================================
# Default efficiency for unknown models
EFFICIENCY_J_PER_TH=29.5

# Per-model efficiency overrides (optional)
EFF_S19=29.5
EFF_S19_PRO=27
EFF_S19J=31
EFF_S19J_PRO=29
EFF_S19_XP=21.5
EFF_S19A=30
EFF_S19A_PRO=28

# ============================================================================
# CGMINER CLIENT
# ============================================================================
# Timeout for CGMiner API calls in seconds
CGMINER_TIMEOUT=1.0

# ============================================================================
# LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Log format: json or text
LOG_FORMAT=json

# Log retention in days
LOG_RETENTION_DAYS=7

# Enable database logging (1 or 0)
LOG_TO_DB=1

# ============================================================================
# API SETTINGS
# ============================================================================
# Maximum limit for API query results
API_MAX_LIMIT=10000
